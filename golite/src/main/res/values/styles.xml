<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themeMain</item>
        <item name="colorPrimaryDark">@color/themeDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@android:color/white</item>

    </style>
    <style name="activatedBackgroundIndicator" parent="AppTheme">
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
    </style>
    <style name="weeklyReviewBody">
        <item name="android:textSize">22sp</item>
        <item name="android:paddingLeft">4pt</item>
        <item name="android:paddingRight">4pt</item>
    </style>
    <style name="weeklyReviewHeader" parent="weeklyReviewBody">
        <item name="android:textStyle">bold</item>
    </style>


</resources>
